<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_walkers_z_report" model="ir.ui.view">
        <field name="name">view_walkers_z_report</field>
        <field name="model">walkers.z.report</field>
        <field name="arch" type="xml">
            <form string="Walkers Z Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="config_id" widget="many2many_tags" options="{'no_create': True}"/>

                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>

                <footer>
                    <!--                    <button name="generate_z_report" string="Print" type="object" class="btn-primary"/>-->
<!--                    <button name="generate_z_report" string="Print" type="object" class="btn-primary"/>-->
                    <button name="generate_z_report"
                            type="object"
                            class="btn btn-primary"
                            string="Generate Z Report"
                            id="preview_z_report_button"/>

                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_walkers_z_report" model="ir.actions.act_window">
        <field name="name">Walkers Z Report</field>
        <field name="res_model">walkers.z.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem
            id="walkers_z_report_menu"
            name="Walkers Z Report"
            parent="point_of_sale.menu_point_rep"
            action="action_walkers_z_report"
            sequence="1"/>
</odoo>