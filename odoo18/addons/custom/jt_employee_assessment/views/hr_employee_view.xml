<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button 
                        class="oe_stat_button" 
                        type="object" 
                        name="view_assessments" 
                        icon="fa-star-half-o" 
                        invisible="count_assessments  == 0 and  has_officer_group == False">
                        <div class="o_stat_info">
                            <field name="count_assessments" class="o_stat_value"/>
                            <span class="o_stat_text"> Assessment(s) </span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="has_officer_group" />
                    <field name="assessment_template_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
