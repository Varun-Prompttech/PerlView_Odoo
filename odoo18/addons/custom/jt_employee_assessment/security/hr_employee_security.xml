<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.rule" id="hr_assessments_user_rule">
        <field name="name">HR Assessments User Rule</field>
        <field name="model_id" ref="model_hr_assessments"/>
        <field name="domain_force">[('employee_id', 'child_of', user.employee_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record model="ir.rule" id="hr_assessments_admin_rule">
        <field name="name">HR Assessments Admin Rule</field>
        <field name="model_id" ref="model_hr_assessments"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_erp_manager')), (4, ref('base.group_system')), (4, ref('base.user_admin')), (4, ref('hr.group_hr_user')),]"/>
    </record>
</odoo>