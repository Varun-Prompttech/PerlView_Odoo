<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- t-on-focus="() => this.open_keyboard()"  -->
    <t t-name="sh_pos_manager_validation.passwordPopup">
        <Dialog size="'sm'" title="props.title">
            <div>
                <input type="text" 
                class="form-control" 
                id="password" name='password' 
                autofocus="autofocus" 
                placeholder="Enter Password"
                t-model="state.input_password" t-on-focus="open_keyboard"></input>
            </div>
            <t t-set-slot="footer">
                <button class="button dont-show-again highlight btn btn-lg btn-primary w-auto" t-on-click="confirm">Confirm</button>
                <button class="button dont-show-again highlight btn btn-lg btn-primary w-auto" t-on-click="cancel">Cancel</button>
            </t>

        </Dialog>
        <OnScreenKeyBoard />
    </t>
    

</templates>
