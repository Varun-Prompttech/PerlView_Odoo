<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fast_moving_product_wizard" model="ir.ui.view">
        <field name="name">fast.moving.product.wizard.form</field>
        <field name="model">fast.moving.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Best Selling Product Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="branch_id"  options="{'no_open': False}"/>
                </group>
                <footer>
                    <button string="Print XLS"
                            type="object"
                            name="action_print_xls"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fast_moving_product_wizard" model="ir.actions.act_window">
        <field name="name">Best Selling Product Report</field>
        <field name="res_model">fast.moving.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_fast_moving_product_report"
              name="Best Selling Product Report"
              parent="point_of_sale.menu_point_rep"
              action="action_fast_moving_product_wizard"
              sequence="12"/>
</odoo>
