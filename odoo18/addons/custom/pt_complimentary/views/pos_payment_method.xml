<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_pos_payment_method_form" model="ir.ui.view">
        <field name="name">inherit_pos_payment_method_form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='split_transactions']" position="after">
                <field name="is_complimentary"/>
                <field name="expense_account" invisible="is_complimentary != True" required="is_complimentary == True"/>
            </xpath>
        </field>
    </record>
</odoo>