<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Assessment Store Type Form View -->
        <record id="assessment_store_view_form" model="ir.ui.view">
            <field name="name">assessment.store.view.form</field>
            <field name="model">assessment.store</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string='Store Name' required="1"/>
                                <label for="date_localization" string="Geo Location"/>
                                <div>
                                    <span>Lat :
                                        <field name="partner_latitude" nolabel="1" class="oe_inline" forece_save="1"
                                               readonly="1"/>
                                    </span>
                                    <br/>
                                    <span>Long:
                                        <field name="partner_longitude" nolabel="1" class="oe_inline" forece_save="1"
                                               readonly="1"/>
                                    </span>
                                    <br/>
                                    <span invisible="not date_localization">Updated on:
                                        <field name="date_localization" nolabel="1" readonly="1"
                                               class="oe_inline"/>
                                        <br/>
                                    </span>
                                    <div name="geo_localize_button">
                                        <button invisible="partner_latitude != 0 or partner_longitude != 0"
                                                icon="fa-gear" string="Compute Location"
                                                title="Compute Localization"
                                                name="update_partner_location" type="object" class="btn btn-link p-0"/>
                                        <button invisible="partner_latitude == 0 and partner_longitude == 0"
                                                icon="fa-refresh" string="Refresh" title="Refresh Localization"
                                                name="update_partner_location" type="object" class="btn btn-link p-0"/>
                                    </div>
                                </div>
                            </group>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <chatter reload_on_attachment="True"/>
                </form>
            </field>
        </record>

        <!-- Assessment Store Type List View -->
        <record id="assessment_store_view_list" model="ir.ui.view">
            <field name="name">assessment.store.view.list</field>
            <field name="model">assessment.store</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string='Store Name'/>
                </list>
            </field>
        </record>

        <!-- Assessment Paramater Action -->
        <record id="action_assessment_store" model="ir.actions.act_window">
            <field name="name">Assessment Store</field>
            <field name="res_model">assessment.store</field>
            <field name="view_mode">list,form</field>
        </record>


    </data>
</odoo>
