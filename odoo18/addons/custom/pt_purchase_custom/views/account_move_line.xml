<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="add_digits_account_move_line" model="ir.ui.view">
        <field name="name">add_digits_account_move_line</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//list//field[@name='price_unit']" position="replace">
                <field name="price_unit" column_invisible="parent.move_type in ('in_invoice','in_refund')"/>
                <field name="price_unit" digits="[42,6]" column_invisible="parent.move_type not in ('in_invoice','in_refund')"/>
            </xpath>
        </field>
    </record>
</odoo>