<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_employee_assessment_report" model="report.paperformat">
            <field name="name">Custom Paperformat for the Employee Assessment Report</field>
            <field name="default" eval="True"/>
            <field name="disable_shrinking" eval="False"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>

        <record id="assessment_report_config" model="ir.actions.report">
            <field name="name">Employee Assessment Report</field>
            <field name="model">hr.assessments</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_employee_assessment.employee_assessment_report_document</field>
            <field name="report_file">jt_employee_assessment.employee_assessment_report_document</field>
            <field name="binding_model_id" ref="jt_employee_assessment.model_hr_assessments"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_employee_assessment_report"/>
        </record>

        <template id="employee_assessment_report">
            <t t-call="web.external_layout">
                <main>
                    <div class="page">
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2>Employee Assessment Report</h2>
                        </div>
                        <br></br>
                        <div style="margin-bottom: 20px;">
                            <p>
                                <strong>Employee Name :</strong>
                                <t t-out="doc.employee_id.name"/>
                            </p>
                            <p>
                                <strong>Store Name :</strong>
                                <t t-out="doc.store_id.name"/>
                            </p>
                            <p>
                                <strong>Assessment Type :</strong>
                                <t t-out="doc.ass_type"/>
                            </p>
                            <p>
                                <strong>Completion Date :</strong>
                                <t t-out="doc.get_local_complete_date()"/>
                            </p>
                            <p>
                                <strong>Created By :</strong>
                                <t t-out="doc.create_uid.name"/>
                            </p>
                            <p>
                                <strong>Seq Number :</strong>
                                <t t-out="doc.seq_number"/>
                            </p>
                            <p>
                                <strong>Average Score :</strong>
                                <t t-out="doc.total_points"/>
                            </p>
                        </div>

                        <table border="1" cellspacing="0" cellpadding="5"
                               style="border-collapse: collapse; width:100%; table-layout: fixed;">
                            <thead style="background-color:#f2f2f2; text-align:center;">
                                <tr>
                                    <th style="width:40%;">Parameter Name</th>
                                    <th style="width:18%;">Notes</th>
                                    <th style="width:6%;">Yes</th>
                                    <th style="width:6%;">No</th>
                                    <th style="width:6%;">NA</th>
                                    <th style="width:24%;">Attachment</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.assessment_line_ids" t-as="line">
                                    <td style="padding-left: 10px; padding-right: 10px; word-wrap: break-word;">
                                        <t t-out="line.name or ''"/>
                                    </td>
                                    <td>
                                        <t t-out="line.note or ''"/>
                                    </td>
                                    <td style="text-align:center;">
                                        <t t-if="line.is_assessment_true">✔</t>
                                        <t t-else="">✘</t>
                                    </td>
                                    <td style="text-align:center;">
                                        <t t-if="line.is_assessment_false">✔</t>
                                        <t t-else="">✘</t>
                                    </td>
                                    <td style="text-align:center;">
                                        <t t-if="line.is_assessment_na">✔</t>
                                        <t t-else="">✘</t>
                                    </td>
                                    <td style="vertical-align: top; text-align: center;">
                                        <t t-if="line.attachment_ids">
                                            <t t-foreach="line.attachment_ids" t-as="attachment">
                                                <img t-att-src="'data:image/png;base64,' + attachment.datas.decode('utf-8')"
                                                     alt="Attachment Image"
                                                     style="max-height:60px; width:80px; object-fit:contain; margin-top:0; display:inline-block;"/>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </main>
                <p style="page-break-after: always;"/>
            </t>
        </template>

        <template id="employee_assessment_report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="jt_employee_assessment.employee_assessment_report"></t>
                </t>
            </t>
        </template>

    </data>
</odoo>
