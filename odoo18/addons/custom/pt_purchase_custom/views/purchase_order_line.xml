<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="add_digits_po_line" model="ir.ui.view">
        <field name="name">add_digits_po_line</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="attributes">
                <attribute name="digits">[42,6]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//list//field[@name='name']" position="after">
                <field name="category_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="before">
                <field name="average_cost" optional="hide"/>
                <field name="unitprice_vat" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>