<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_oma" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.oma</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting string="Thermal Receipt Printer" help="CUPS printer name for auto-printing receipts after kiosk payment">
                    <field name="thermal_printer_name" placeholder="POS-80"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
