<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="pos_orderline_items_count.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('receipt-change')]" position="after">
            <!--     Display total items and total count inside order receipt    -->
            <div>
                <span>Total Items  / مجموع العناصر</span>
                <span style="float:right;">
                    <t t-esc='props.data.count'/>
                </span>
            </div>
            <div>
            <span>Total Count /  العدد الإجمالي</span>
                <span style="float:right;">
                    <t t-esc='props.data.sum'/>
                </span>
            </div>
        </xpath>

        <xpath expr="//div[contains(@class, 'pos-receipt-order-data')]/p" position="replace">
            <p></p>
            <div style="border-top: 1px dashed #000; margin: 5px 0;"></div>
        </xpath>

        <xpath expr="//div[contains(@class, 'pos-receipt-order-data')]/div[@id='order-date']" position="replace">
            <div id="order-date" t-esc="'Printed On: ' + props.data.date" />
        </xpath>
        <xpath expr="//div[contains(@class, 'pos-receipt-order-data')]/div[@id='order-date']" position="after">
            <div style="border-top: 1px dashed #000; margin: 5px 0;"></div>
            <p>THANK YOU. COME AGAIN!</p>
        </xpath>
    </t>
    <t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="after">
            <br/>
            <br/>
            <div class="pos-receipt-header">
                <span id="title_english" t-translation="off">Tax Invoice</span>
            </div>
            <div class="pos-receipt-header">
                <span id="title_arabic" t-translation="off">الفاتورة الضريبية</span>
            </div>
        </xpath>
    </t>
</templates>