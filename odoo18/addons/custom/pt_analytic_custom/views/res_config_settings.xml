<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_add_analytic" model="ir.ui.view">
        <field name="name">res_config_add_analytic</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="pos_accounting_section" position="after">
                <block title="Analytic Account Configuration" id="config_analytic_account_section">
                    <setting>
                        <div class="content-group row">
                            <label for="analytic_account_id" class="col-lg-4" string="Analytic Account"/>
                            <field name="analytic_account_id" widget="many2many_tags"/>
                        </div>

                    </setting>

                </block>
            </block>

        </field>
    </record>
</odoo>