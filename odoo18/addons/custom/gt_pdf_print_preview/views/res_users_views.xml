<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_print_priview_form">
        <field name="name">user form: add totp status</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Print Preview" name="print_preview">
                    <group>
                        <field name="preview_print"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="res_users_print_preview_inherit" model="ir.ui.view">
        <field name="name">res.users.preferences.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences_page']" position="after">
                <page string="Print Preview" name="print_preview">
                    <group>
                        <field name="preview_print"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
